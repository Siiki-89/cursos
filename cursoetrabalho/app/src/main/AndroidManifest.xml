<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cursoetrabalho"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activity.form_view_trabalho"
            android:exported="false" />
        <activity
            android:name=".activity.form_categoria_trabalho_especifica"
            android:exported="false" />
        <activity
            android:name=".activity.form_categoria_trabalho"
            android:exported="false" />
        <activity
            android:name=".activity.form_categoria_curso_especifica"
            android:exported="false" />
        <activity
            android:name=".activity.form_view_curso"
            android:exported="false" />
        <activity
            android:name=".activity.form_categoria_curso"
            android:exported="false" />
        <activity
            android:name=".activity.form_add_empresa"
            android:exported="false"
            android:label="Adicionar empresa"
            android:parentActivityName=".activity.form_principal" />
        <activity
            android:name=".activity.form_add_vaga"
            android:exported="false"
            android:label="Adicionar vaga"
            android:parentActivityName=".activity.form_principal" />
        <activity
            android:name=".activity.form_add_curso"
            android:exported="false"
            android:label="Adicionar curso"
            android:parentActivityName=".activity.form_principal" />
        <activity
            android:name=".activity.form_principal"
            android:exported="false" />
        <activity
            android:name=".activity.form_entrar"
            android:exported="false"
            android:label="Entrar"
            android:theme="@style/Theme.Entrada"/>
        <activity
            android:name=".activity.form_entrada"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>