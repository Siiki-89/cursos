<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.form_add_vaga">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtNomeEmpresa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="33dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#0077B6"
            app:startIconTint="#0077B6"
            app:startIconDrawable="@drawable/icon_add_vaga_empresa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            app:boxBackgroundColor="#2e2d2b"
            app:boxCornerRadiusBottomStart="0dp" app:boxCornerRadiusBottomEnd="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNomeEmpresaCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome da empresa"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtCargo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#0077B6"
            app:startIconTint="#0077B6"
            app:startIconDrawable="@drawable/icon_add_vaga_cargo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeEmpresa"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            app:boxBackgroundColor="#2e2d2b"
            app:boxCornerRadiusBottomStart="0dp" app:boxCornerRadiusBottomEnd="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtCargoCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo da vaga"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtDataInicial"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#0077B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCargo"
            app:startIconDrawable="@drawable/icon_add_vaga_relogio"
            app:startIconTint="#0077B6"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            app:boxBackgroundColor="#2e2d2b"
            app:boxCornerRadiusBottomStart="0dp" app:boxCornerRadiusBottomEnd="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDataInicialCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data inicial"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="date" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtDataFinal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#0077B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toEndOf="@+id/txtDataInicial"
            app:layout_constraintTop_toBottomOf="@+id/txtCargo"
            app:startIconDrawable="@drawable/icon_add_vaga_relogio"
            app:startIconTint="#0077B6"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            app:boxBackgroundColor="#2e2d2b"
            app:boxCornerRadiusBottomStart="0dp" app:boxCornerRadiusBottomEnd="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDataFinalCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data final"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="date" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinnerCategoriaVaga"
            android:background="#2e2d2b"
            android:popupBackground="#2e2d2b"
            android:spinnerMode="dropdown"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            android:dropDownVerticalOffset="60dp"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDataInicial" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="33dp"
            android:text="Descrição da vaga"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCategoriaVaga" />

        <EditText
            android:id="@+id/txtDescVaga"
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            android:background="#2e2d2b"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtQtdVaga3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#0077B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescVaga"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            app:boxBackgroundColor="#2e2d2b"
            app:boxCornerRadiusBottomStart="0dp" app:boxCornerRadiusBottomEnd="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtQtdVagaCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade de vagas"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtUrlVaga3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#0077B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtQtdVaga3"
            app:startIconDrawable="@drawable/icon_add_vaga_link"
            app:startIconTint="#0077B6"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            app:boxBackgroundColor="#2e2d2b"
            app:boxCornerRadiusBottomStart="0dp" app:boxCornerRadiusBottomEnd="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtUrlVagaCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL da vaga"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/azul"
            android:text="Finalizar cadastro"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnVagaImg" />

        <Button
            android:id="@+id/btnVagaImg"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/azul"
            android:text="Selecionar IMG"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUrlVaga3" />

        <ImageView
            android:id="@+id/vagaImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toEndOf="@+id/btnFinalizar"
            app:layout_constraintTop_toBottomOf="@+id/txtUrlVaga3"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_launcher_foreground" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


